# Environment Variables
# Copy to .env and fill in values

# NVIDIA NIM Configuration (Primary)
NVIDIA_NIM_ENABLED=true
NGC_API_KEY=nvapi-your-ngc-api-key
NVIDIA_LLM_URL=http://llm:8000/v1
NVIDIA_EMBEDDINGS_URL=http://embeddings:8000/v1
NVIDIA_RERANKER_URL=http://reranker:8000/v1

# LLM Providers (Fallback)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/novelai
REDIS_URL=redis://redis:6379/0

# Vector Database
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=novelai

# App Settings
SECRET_KEY=your-secret-key-change-in-production
DEBUG=true
